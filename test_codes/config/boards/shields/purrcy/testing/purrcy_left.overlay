#include <dt-bindings/zmk/matrix-transform.h>

/ {
    chosen {
        zmk,kscan = &kscan0;
        zmk,matrix_transform = &default_transform;
    };

    kscan0: kscan_composite {
        compatible = "zmk,kscan-gpio-composite";
        rows = <5>;
        columns = <6>;
        
        matrix { // include matrix drivers
            kscan = <&kscan1>;
        };
        matrix {
            kscan = <&kscan2>;
            column-offset = <3>; //shift kscan2 to avoid overlapping 
        };

    };

    kscan1: kscan_l {
        compatible = "zmk,kscan-gpio-matrix";
        diode-direction = "row2col";
        col-gpios
            = <&xiao_d 0 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>
            , <&xiao_d 1 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>
            , <&xiao_d 2 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>;
        row-gpios
            = <&xiao_d 3 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>
            , <&xiao_d 4 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>
            , <&xiao_d 5 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>
            , <&xiao_d 8 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>
            , <&xiao_d 9 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>;
    };

    kscan2: kscan_r {
        compatible = "zmk,kscan-gpio-matrix";
        diode-direction = "col2row";
        col-gpios
            = <&xiao_d 0 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>
            , <&xiao_d 1 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>
            , <&xiao_d 2 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>;
        row-gpios
            = <&xiao_d 3 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>
            , <&xiao_d 4 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>
            , <&xiao_d 5 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>
            , <&xiao_d 8 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>
            , <&xiao_d 9 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>;
    };

    default_transform: matrix_transform {
        compatible: "zmk,matrix-transform";
        rows = <5>;
        columns = <6>;
        map = <
            RC(0,0) RC(0,1) RC(0,1) RC(0,2) RC(0,3) RC(0,4)
            RC(0,1) RC(1,1) RC(1,1) RC(1,2) RC(1,3) RC(1,4)
            RC(0,2) RC(2,1) RC(2,1) RC(2,2) RC(2,3) RC(2,4)
            RC(0,3) RC(3,1) RC(3,1) RC(3,2) RC(3,3) RC(3,4)
            RC(0,4) RC(4,1) RC(4,1) RC(4,2) RC(4,3)
        >;
    };
};